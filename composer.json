{
    "name": "innoraft/drupal-quality-checker",
    "description": "Setups code quality checking tools for Drupal project.",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "git",
        "hooks",
        "quality"
    ],
    "authors": [
        {
            "name": "Kunal Singh",
            "role": "Maintainer"
        },
        {
            "name": "Hemant Vyas",
            "role": "Maintainer"
        }
    ],
    "support": {
        "issues": "https://github.com/innoraft/drupal-quality-checker/issues",
        "source": "https://github.com/innoraft/drupal-quality-checker"
    },
    "require": {
        "drupal/coder": "^8.3",
        "ergebnis/composer-normalize": "^2.0",
        "friendsoftwig/twigcs": "^6.0",
        "palantirnet/drupal-rector": "^0.13.1",
        "phpro/grumphp": "^1.5",
        "phpstan/phpstan": "^1.9",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "GrumPHP\\CustomTask\\Trufflehog\\": "tasks"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "phpro/grumphp": true
        }
    },
    "install-trufflehog": [
        "chmod +x scripts/install_trufflehog.sh",
        "bash scripts/install_trufflehog.sh"
    ],
    "post-install-cmd": [
        "@install-trufflehog",
        "composer dump-autoload"
    ],
    "post-update-cmd": [
        "@install-trufflehog",
        "composer dump-autoload"
    ]
}
